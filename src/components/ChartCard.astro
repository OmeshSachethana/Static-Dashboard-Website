---
const { title, period = "Last 30 days", showDropdown = true } = Astro.props;
---

<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h3 class="text-lg font-semibold text-gray-800">{title}</h3>
      <p class="text-sm text-gray-500">{period}</p>
    </div>
    
    {showDropdown && (
      <div class="relative">
        <select class="appearance-none bg-gray-50 border border-gray-300 rounded-lg px-4 py-2 pr-8 text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent">
          <option>Last 7 days</option>
          <option selected>Last 30 days</option>
          <option>Last 90 days</option>
          <option>Last year</option>
        </select>
        <i class="fas fa-chevron-down absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 pointer-events-none"></i>
      </div>
    )}
  </div>

  <!-- Simple Chart Visualization (CSS-based) -->
  <div class="h-64 flex items-end space-x-2 pt-4">
    {Array.from({ length: 12 }).map((_, i) => {
      const height = 20 + Math.random() * 60;
      const color = i > 8 ? "from-blue-400 to-blue-600" : "from-blue-300 to-blue-500";
      return (
        <div class="flex flex-col items-center flex-1">
          <div class="w-full relative group">
            <div
              class={`w-full bg-gradient-to-t ${color} rounded-t-lg transition-all duration-300 group-hover:opacity-90`}
              style={`height: ${height}%`}
            ></div>
            <div class="opacity-0 group-hover:opacity-100 absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-2 py-1 bg-gray-900 text-white text-xs rounded whitespace-nowrap transition-opacity">
              ${Math.round(500 + Math.random() * 2000)}
            </div>
          </div>
          <span class="text-xs text-gray-500 mt-2">{["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"][i]}</span>
        </div>
      );
    })}
  </div>

  <!-- Chart Legend -->
  <div class="flex items-center justify-center space-x-6 mt-8 pt-6 border-t border-gray-100">
    <div class="flex items-center space-x-2">
      <div class="w-3 h-3 bg-gradient-to-r from-blue-300 to-blue-500 rounded-full"></div>
      <span class="text-sm text-gray-600">Revenue</span>
    </div>
    <div class="flex items-center space-x-2">
      <div class="w-3 h-3 bg-gradient-to-r from-purple-300 to-purple-500 rounded-full"></div>
      <span class="text-sm text-gray-600">Expenses</span>
    </div>
  </div>
</div>