---
const tableData = [
  { id: "#ORD-7841", customer: "Alex Johnson", date: "Nov 12, 2023", amount: "$249.99", status: "Completed", statusColor: "bg-green-100 text-green-800" },
  { id: "#ORD-7840", customer: "Sarah Miller", date: "Nov 11, 2023", amount: "$149.99", status: "Pending", statusColor: "bg-yellow-100 text-yellow-800" },
  { id: "#ORD-7839", customer: "Mike Wilson", date: "Nov 10, 2023", amount: "$349.99", status: "Completed", statusColor: "bg-green-100 text-green-800" },
  { id: "#ORD-7838", customer: "Emma Davis", date: "Nov 9, 2023", amount: "$199.99", status: "Processing", statusColor: "bg-blue-100 text-blue-800" },
  { id: "#ORD-7837", customer: "David Lee", date: "Nov 8, 2023", amount: "$449.99", status: "Shipped", statusColor: "bg-purple-100 text-purple-800" },
];
---

<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h3 class="text-lg font-semibold text-gray-800">Recent Orders</h3>
      <p class="text-sm text-gray-500">Last 30 days</p>
    </div>
    <button class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors">
      <i class="fas fa-download mr-2"></i> Export
    </button>
  </div>

  <div class="overflow-x-auto">
    <table class="w-full">
      <thead>
        <tr class="border-b border-gray-200">
          <th class="text-left py-3 px-4 text-sm font-medium text-gray-500">ORDER ID</th>
          <th class="text-left py-3 px-4 text-sm font-medium text-gray-500">CUSTOMER</th>
          <th class="text-left py-3 px-4 text-sm font-medium text-gray-500">DATE</th>
          <th class="text-left py-3 px-4 text-sm font-medium text-gray-500">AMOUNT</th>
          <th class="text-left py-3 px-4 text-sm font-medium text-gray-500">STATUS</th>
          <th class="text-left py-3 px-4 text-sm font-medium text-gray-500">ACTIONS</th>
        </tr>
      </thead>
      <tbody>
        {tableData.map((row) => (
          <tr class="border-b border-gray-100 hover:bg-gray-50">
            <td class="py-4 px-4">
              <span class="font-medium text-blue-600">{row.id}</span>
            </td>
            <td class="py-4 px-4">
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-gray-200 rounded-full"></div>
                <span class="font-medium">{row.customer}</span>
              </div>
            </td>
            <td class="py-4 px-4 text-gray-600">{row.date}</td>
            <td class="py-4 px-4 font-semibold">{row.amount}</td>
            <td class="py-4 px-4">
              <span class={`${row.statusColor} px-3 py-1 rounded-full text-xs font-medium`}>
                {row.status}
              </span>
            </td>
            <td class="py-4 px-4">
              <button class="text-gray-400 hover:text-gray-600 p-2">
                <i class="fas fa-ellipsis-v"></i>
              </button>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>

  <div class="flex items-center justify-between mt-6 pt-6 border-t border-gray-200">
    <p class="text-sm text-gray-500">Showing 5 of 128 orders</p>
    <div class="flex items-center space-x-2">
      <button class="w-10 h-10 flex items-center justify-center border border-gray-300 rounded-lg hover:bg-gray-50">
        <i class="fas fa-chevron-left text-gray-600"></i>
      </button>
      <button class="w-10 h-10 flex items-center justify-center bg-blue-600 text-white rounded-lg">1</button>
      <button class="w-10 h-10 flex items-center justify-center border border-gray-300 rounded-lg hover:bg-gray-50">2</button>
      <button class="w-10 h-10 flex items-center justify-center border border-gray-300 rounded-lg hover:bg-gray-50">3</button>
      <span class="px-2 text-gray-500">...</span>
      <button class="w-10 h-10 flex items-center justify-center border border-gray-300 rounded-lg hover:bg-gray-50">8</button>
      <button class="w-10 h-10 flex items-center justify-center border border-gray-300 rounded-lg hover:bg-gray-50">
        <i class="fas fa-chevron-right text-gray-600"></i>
      </button>
    </div>
  </div>
</div>