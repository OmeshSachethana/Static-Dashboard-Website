---
const { title = "Dashboard", showSearch = true } = Astro.props;
---

<header class="sticky top-0 z-40 bg-white border-b border-gray-200 px-6 py-4 shadow-sm">
  <div class="flex items-center justify-between">
    <!-- Left side: Title and Breadcrumb -->
    <div class="flex items-center space-x-4">
      <h1 class="text-2xl font-bold text-gray-800">{title}</h1>
      <nav class="hidden md:flex items-center space-x-2 text-sm">
        <a href="#" class="text-gray-500 hover:text-gray-700">Home</a>
        <i class="fas fa-chevron-right text-gray-400 text-xs"></i>
        <span class="text-gray-700 font-medium">Dashboard</span>
      </nav>
    </div>

    <!-- Right side: Search and User Profile -->
    <div class="flex items-center space-x-4">
      {showSearch && (
        <div class="relative hidden md:block">
          <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
          <input
            type="text"
            placeholder="Search..."
            class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent w-64"
          />
        </div>
      )}

      <div class="flex items-center space-x-3">
        <button class="relative p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-full">
          <i class="fas fa-bell text-xl"></i>
          <span class="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full"></span>
        </button>
        
        <div class="h-8 w-px bg-gray-300"></div>
        
        <div class="flex items-center space-x-3 cursor-pointer">
          <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold">
            JD
          </div>
          <div class="hidden md:block">
            <p class="font-medium">John Doe</p>
            <p class="text-sm text-gray-500">Administrator</p>
          </div>
          <i class="fas fa-chevron-down text-gray-400 hidden md:block"></i>
        </div>
      </div>
    </div>
  </div>
</header>